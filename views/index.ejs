<%- include('./partials/header') %>

<div class="mt-3">
  <h2 class="mb-4">Listado de Materiales de Construcción</h2>
  
  <div class="mb-4">
    <a href="/create" class="btn btn-primary">
      <i class="bi bi-plus-circle me-1"></i> Nuevo Material
    </a>
  </div>

  <% if (materiales.length > 0) { %>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Categoría</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Disponible</th>
            <th>Descripción</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% materiales.forEach(material => { %>
            <tr>
              <td><%= material.idmaterial %></td>
              <td><%= material.categoria %></td>
              <td><%= material.nombre %></td>
              <td>$<%= parseFloat(material.precio).toFixed(2) %></td>
              <td>
                <% if (material.disponible === 'S') { %>
                  <span class="badge bg-success">Disponible</span>
                <% } else { %>
                  <span class="badge bg-danger">No disponible</span>
                <% } %>
              </td>
              <td><%= material.descripcion || 'Sin descripción' %></td>
              <td>
                <div class="btn-group" role="group">
                  <a href="/edit/<%= material.idmaterial %>" class="btn btn-sm btn-info text-white">
                    <i class="bi bi-pencil"></i> Editar
                  </a>
                  <a href="/delete/<%= material.idmaterial %>" class="btn btn-sm btn-danger delete">
                    <i class="bi bi-trash"></i> Eliminar
                  </a>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } else { %>
    <div class="alert alert-warning">
      <strong>No hay materiales registrados</strong>
    </div>
  <% } %>
</div>

<%- include('./partials/footer') %>